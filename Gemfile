source "https://rubygems.org"

gem "jekyll", "~> 4.3" # Jekyllのバージョンを指定。最新の安定版を使用。
gem "github-pages", group: :jekyll_plugins # GitHub Pagesと互換性のあるgem群をインストール（Netlifyでも使える）
# もしGitHub PagesとJekyllのバージョンが合わない場合は、上の行をコメントアウトして、
# 以下の行を有効にしてください。
# gem "jekyll-feed"
# gem "jekyll-sitemap"
# ... 他のJekyllプラグイン ...

group :jekyll_plugins do
